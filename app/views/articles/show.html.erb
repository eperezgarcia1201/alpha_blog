
  <h2 align="center">  Title: <%= @article.title %></h2>
  <div class ="well col-sm-8 col-sm-offset-2">
<h4 class="page-header description"><strong>Description:</strong></h4>
    <%= simple_format(@article.description) %>
<div class="article-actions">
<%= link_to "Editing this article", edit_article_path(@article), class:"btn btn-xs btn-primary" %>
<%= link_to "Delete this article", articles_path(@article), method: :delete, 
					data: { confirm: "Are you sure you want to delete the article?"}, 
					class:"btn btn-xs btn-danger" %> 
<%= link_to "View all articles", articles_path, class:"btn btn-xs btn-success" %>
</div><!--.article-actions -->
</div><!--.well -->