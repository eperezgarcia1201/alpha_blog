<h1 align="center"> Log In</h1>
<%= form_for(:sessions, :html => {class: "form-horizontal", role:"form"}, url: login_path) do |f| %>
        <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :email %>
        </div><!--.col-sm-2 control-label -->
        <div class="col-sm-8">
            <%= f.text_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
        </div><!--.col-sm-8 -->
        </div><!--.form-group -->
   <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :password %>
       </div><!--.control-label col-sm-2-->
       <div class="col-sm-8">
           <%= f.password_field :email, class: "form-control", placeholder: "Enter Your Password" %>
       </div><!--.col-sm-8-->
        </div><!--.form-group -->

   <div class="form-group">
       <div class="col-sm-offset-2 col-sm-10">
           <%= f.submit "Log in", class: "btn btn-primary btn-large" %>
       </div>
        </div>
    <% end %>
        <div class="col-xs-4 col-xs-offset-4">
        [ <%= link_to "Cancel request and return to articles listining", articles_path %> ]
        </div><!--.col-xs-4 -->